.b-track
  height: 70px;
  padding: 0;
  margin: 9;

  border-top: 1px solid border-top-color;
  border-bottom: 1px solid border-bottom-color;

  color: font-prim-color;
  list-style-type: none;

  .b-track__artwork
    float: left;
    width: 50px;
    height: 50px;
    margin: 10px;

  .b-track__author
    display: block;
    margin-top: 9px;
    margin-left: 70px;

    color: font-sec-color;
    font-size: 11px;

    text-shadow: 1px 1px 1px rgba(0, 0, 0, .4);

  .b-track__title
    text-shadow: 1px 1px 1px rgba(0, 0, 0, .4);

