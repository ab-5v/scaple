.b-playlist-selector
  padding: 0;
  margin: 0 40px;
  width: 220px;
  height: 32px;
  line-height: 32px;
  overflow: hidden;

  text-align: center;

  .b-playlist-selector__item
    display: inline-block;
    position: relative;
    list-style-type: 0;
    width: 12px;
    height: 12px;
    margin: 0 7px;

    font-size: 0;
    background: bg-prim-color;
    box-shadow: inset 0 0 4px rgba(0,0,0,.8), 0 0 1px rgba(255, 255, 255, .3);
    border-radius: 6px;

    cursor: pointer;

  .b-playlist-selector__item_selected::after
    content: '';
    position: absolute;
    top: 2px;
    left: 2px;
    width: 8px;
    height: 8px;
    background: linear-gradient(top, #fa892a, #f93402);
    border-radius: 4px;

  .b-playlist-selector__item_add
    top: -2px;
    width: 15px;
    height: 15px;
    border-radius: 0;
    box-shadow: none;
    background: none;

    font-size: 15px;
    font-weight: bold;
    line-height: 15px;
    color: font-sec-color;
    text-shadow: 0 0 4px #000;

  .b-playlist-selector__item_add:hover
    color: lighten(font-sec-color, 30%);
