.b-playlist-selector
  padding: 0;
  margin: 0 40px;
  height: 32px;
  line-height: 32px;
  overflow: hidden;

  text-align: center;

  .b-playlist-selector__item
    display: inline-block;
    position: relative;
    list-style-type: 0;
    width: 12px;
    height: 12px;
    margin: 0 7px;

    font-size: 0;
    line-height: 32px;
    background: bg-prim-color;
    box-shadow: inset 0 0 4px rgba(0,0,0,.8), 0 0 1px rgba(255, 255, 255, .3);
    border-radius: 6px;

    cursor: pointer;

  .b-playlist-selector__item_selected::before
    content: '';
    position: absolute;
    z-index: 1;
    top: -10px;
    left: -1px;
    width: 0;
    height: 0;
    border-left: 7px solid transparent;
    border-top: 9px solid bg-prim-color;
    border-right: 7px solid transparent;

  .b-playlist-selector__item_selected::after
    content: '';
    position: absolute;
    top: 2px;
    left: 2px;
    width: 8px;
    height: 8px;
    background: linear-gradient(top, #fa892a, #f93402);
    border-radius: 4px;
