.b-playlist-selector
  display: block;
  height: 100%;
  padding: 0;
  margin: 0 40px;
  overflow: hidden;

  text-align: center;

  .b-playlist-selector__item
    display: inline-block;
    position: relative;
    list-style-type: 0;
    width: 12px;
    height: 12px;
    margin: 9px 7px 0;

    vertical-align: top;

    font-size: 0;
    background: bg-prim-color;
    box-shadow: inset 0 0 4px rgba(0,0,0,.8), 0 0 1px rgba(255, 255, 255, .3);
    border-radius: 6px;

    cursor: pointer;

  .b-playlist-selector__item_selected::after
    content: '';
    position: absolute;
    top: 2px;
    left: 2px;
    width: 8px;
    height: 8px;
    background: #fa892a;
    background: linear-gradient(top, #fa892a, #f93402);
    border-radius: 4px;

  .b-playlist-selector__item_add
    box-shadow: none;
    background: none;

  .b-playlist-selector__item_add::before
  .b-playlist-selector__item_add::after
    content: '';
    position: absolute;
    top: 1px;
    left: 3px;
    width: 2px;
    height: 8px;

    background: font-sec-color;

    box-shadow: 0 0 6px #000;

  .b-playlist-selector__item_add::after
    top: 4px;
    left: 0;
    width: 8px;
    height: 2px;
    box-shadow: none;

  .b-playlist-selector__item_add:hover::before
  .b-playlist-selector__item_add:hover::after
    background: lighten(font-sec-color, 30%);
