.b-playlist-selector
  padding: 0;
  margin: 0 40px;
  height: 32px;
  line-height: 32px;
  overflow: hidden;

  text-align: center;

  .b-playlist-selector__item
    display: inline-block;
    position: relative;
    list-style-type: 0;
    width: 12px;
    height: 12px;
    margin: 0 7px;

    font-size: 0;
    line-height: 32px;
    background-color: #000;
    border-radius: 6px;

    cursor: pointer;

  .b-playlist-selector__item_selected::before
    content: '';
    position: absolute;
    top: -12px;
    left: -2px;
    width: 0;
    height: 0;
    border-left: 8px solid transparent;
    border-top: 10px solid bg-prim-color;
    border-right: 8px solid transparent;

  .b-playlist-selector__item_selected::after
    content: '';
    position: absolute;
    top: 2px;
    left: 2px;
    width: 8px;
    height: 8px;
    background-color: font-sec-color;
    border-radius: 4px;
    box-shadow: inset 0 0 3px rgba(0, 0, 0, .5);
