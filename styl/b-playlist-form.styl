.b-playlist-form
  float: right;
  position: relative;
  height: 32px;
  line-height: 32px;

  .b-playlist-form__fields
    display: none;

  .b-playlist-form__button
    cursor: pointer;
    display: block;
    height: 20px;
    width: 20px;
    margin: 6px 10px;

    line-height: 18px;
    text-align: center;

    font-size: base-font-size*1.2;
    font-weight: bold;
    color: font-sec-color;

    background-color: #000;
    border-radius: 3px;
